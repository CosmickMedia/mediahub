# PWA Manifest MIME type
<IfModule mod_mime.c>
    AddType application/manifest+json .webmanifest
</IfModule>
<FilesMatch "manifest\.json$">
    <IfModule mod_mime.c>
        ForceType application/manifest+json
    </IfModule>
</FilesMatch>

# Cache control for PWA resources
<IfModule mod_headers.c>
    # Cache icons for 1 year
    <FilesMatch "\.(png|jpg|jpeg|gif|ico|svg)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Don't cache manifest files
    <FilesMatch "manifest\.json$">
        Header set Cache-Control "public, max-age=0, must-revalidate"
    </FilesMatch>
</IfModule>

# Gzip compression for manifest files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/manifest+json
    AddOutputFilterByType DEFLATE application/json
</IfModule>
